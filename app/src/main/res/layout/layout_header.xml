<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/edit_name_lable"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:background="@color/edit_name_lable"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp5" >

            <ImageView
                android:id="@+id/ivDrawer"
                android:layout_width="35dp"
                android:layout_height="35dp"
               android:layout_alignParentLeft="true"
                android:layout_gravity="right"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp5"
                android:src="@drawable/ic_menu"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvHeaderText"
                android:layout_width="wrap_content"
                android:layout_weight="0.9"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/app_name"
                android:paddingBottom="@dimen/dp3"
                android:textSize="@dimen/text_22sp" />

            <TextView
                android:id="@+id/tvSubHeaderText"
                android:layout_marginTop="@dimen/dp5"
                android:layout_below="@+id/tvHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_marginTop="@dimen/dp5"
                android:layout_below="@+id/tvHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp2"
                android:textColor="@color/white"
                android:gravity="right"
                android:visibility="gone"
                android:text="DashBoard Change" />


            <ImageView
                android:id="@+id/ivSync"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp5"
                android:src="@drawable/ic_sync_white"
                android:visibility="gone"/>

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linearLayoutDateSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/routeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp5"
            android:text="Date: "
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/spinnerRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp5"
            android:text="Date: "
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>