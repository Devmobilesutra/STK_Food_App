<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- This is the stroke you want to define -->
    <stroke
        android:width="1dp"

        android:color="@color/darkBrown" />
    <corners android:radius="@dimen/dp10" />


    <!-- Optional, fill the rest of your background with a color or gradient, use transparent if you only want the border to be displayed-->
    <gradient
        android:angle="90"
        android:endColor="@android:color/white"
        android:startColor="@color/brown" />
</shape>